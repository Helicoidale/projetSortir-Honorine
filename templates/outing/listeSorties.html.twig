{% extends 'base.html.twig' %}

{% block title %} Sortir |{{ parent() }}{% endblock %}

{% block body %}

        <div class="example-wrapper">
            <h1>Les sorties : </h1>


            <p>Filtrer les sorties :</p>

            <div class="container">
                <form method="GET">
                    <div class="Selectionner campus">


                        <!-- Choix du campus beandeau deroulant-->
                        <select name="campusSelected" class="form-select" aria-label="Default select example">
                            <option value= ""  selected>Sélectionnez un campus</option>
                            {% for campus in listeCampus %}
                                <option value="{{ campus.id }}">{{ campus.nom }}</option>
                            {% endfor %}
                        </select>
                    </div>


                    <!-- les checkbox-->
            <div>
                <input  type="checkbox" id="organisateur" value="{{ user.id }}" name="organisateur">
                <label for="organisateur">Sortie dont je suis l organisateur/trice</label>
            </div>
                <div>
                    <input  type="checkbox" id="jeSuisInscrit" value="{{ user.id }}" name="jeSuisInscrit">
                    <label for="jeSuisInscrit">Sorties auxquelles je suis inscrit/e</label>
                </div>
                <div>
                    <input  type="checkbox" id="nonInscrit" value="{{ user.id }}" name="nonInscrit">
                    <label for="nonInscrit">Sorties auxquelles je ne suis pas inscrit/e</label>
                </div>
                <div>
                    <input  type="checkbox" id="sortiesPassees" value="{{ user.id }}" name="sortiesPassees">
                    <label for="sortiesPassees">Sorties passées</label>
                </div>

                <INPUT class="btn btn-primary"  type="submit" name="nom" value="valider">

            </form>
            <br>
            <a href="{{ path('outing_listeSorties') }}?organisateur={{ user.id }}">Sortie dont je suis l organisateur</a>




                <!-- le tableau-->

            <div class="container table-wrapper-scroll-y my-custom-scrollbar">
                <table class="table table-bordered table-striped mb-0">
                    <thead>
                    <tr>
                        <th scope="col">Nom de la sortie</th>
                        <th scope="col">Date de la sortie</th>
                        <th scope="col">Clôture </th>
                        <th scope="col">Inscrits/places</th>
                        <th scope="col">Etat</th>
                        <th scope="col">Inscrit</th>
                        <th scope="col">Organisateur</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for sortie in listeSorties %}
                     <tr>
                    <td>{{ sortie.nom }}</td>
                    <td>{{ sortie.dateHeureDebut|date("d/m/Y") }}</td>
                    <td>{{sortie.dateLimiteInscription|date("d/m/Y")}} </td>
                    <td>nbr inscrit ? /{{ sortie.nbInscriptionMax }}</td>
                    <td>{{ sortie.statutEtat.getlibelle}}</td>
                    <td>fonction inscrit ?</td>
                    <td>{{ sortie.organisateur.getnom |capitalize }}</td>
                    <td><a href="{{ path('outing_detailSortie',{'id': sortie.id} ) }}">{{ sortie.id }}---Afficher</a> </td>
                    </tr>

                    {% endfor %}
                    </tbody>
                </table>
        </div>
        </div>
        </div>
{% endblock %}
